<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <Button
            android:text="@string/button_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fetchDataButton"
            android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            />

    <android.support.v7.widget.RecyclerView
            android:layout_width="369dp"
            android:layout_height="612dp"
            tools:listitem="@layout/recycler_view_item"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/fetchDataButton"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:id="@+id/newsRecyclerView"
            tools:itemCount="5"/>

    <Button
            android:text="@string/new_post_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/newPostButton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/newsRecyclerView"/>
</android.support.constraint.ConstraintLayout>